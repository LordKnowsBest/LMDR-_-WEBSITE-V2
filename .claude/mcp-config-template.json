{
  "_comment": "Chrome DevTools MCP config for LMDR Evidence Pack verification. Copy the appropriate variant into your MCP client config.",
  "autoConnect_primary": {
    "mcpServers": {
      "chrome-devtools": {
        "command": "npx",
        "args": [
          "chrome-devtools-mcp@latest",
          "--autoConnect",
          "--no-usage-statistics",
          "--viewport=1440x900"
        ]
      }
    }
  },
  "browserUrl_fallback": {
    "mcpServers": {
      "chrome-devtools": {
        "command": "npx",
        "args": [
          "chrome-devtools-mcp@latest",
          "--browserUrl=http://127.0.0.1:9222",
          "--no-usage-statistics",
          "--viewport=1440x900"
        ]
      }
    }
  },
  "setup_instructions": {
    "autoConnect": [
      "1. Chrome 144+ required",
      "2. Navigate to chrome://inspect/#remote-debugging in Chrome",
      "3. Enable remote debugging",
      "4. Log into Wix and open www.lmdr.io",
      "5. Copy autoConnect_primary.mcpServers into your MCP client config"
    ],
    "browserUrl": [
      "1. Close all Chrome instances",
      "2. Run: chrome.exe --remote-debugging-port=9222 --user-data-dir=%USERPROFILE%\\.lmdr-devtools-profile",
      "3. Log into Wix in the new Chrome instance",
      "4. Copy browserUrl_fallback.mcpServers into your MCP client config"
    ]
  }
}
