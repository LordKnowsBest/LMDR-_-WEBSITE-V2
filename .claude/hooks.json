{
  "hooks": {
    "post-file-edit": [
      {
        "name": "enforce-html-location",
        "command": "powershell -ExecutionPolicy Bypass -File .claude/hooks/enforce-html-location.ps1 -FilePath \"$FILE_PATH\"",
        "pattern": "*.html",
        "enabled": true
      },
      {
        "name": "validate-carrier-form",
        "command": "powershell -ExecutionPolicy Bypass -File .claude/hooks/validate-carrier-form.ps1 -FilePath \"$FILE_PATH\"",
        "pattern": "src/public/*Carrier*.html",
        "enabled": true
      },
      {
        "name": "check-wix-query-types",
        "command": "powershell -ExecutionPolicy Bypass -File .claude/hooks/check-wix-query-types.ps1 -FilePath \"$FILE_PATH\"",
        "pattern": "src/backend/*.jsw",
        "enabled": true
      },
      {
        "name": "validate-html-velo-bridge",
        "command": "powershell -ExecutionPolicy Bypass -File .claude/hooks/validate-html-velo-bridge.ps1 -FilePath \"$FILE_PATH\"",
        "pattern": "src/public/*.html",
        "enabled": true
      }
    ],
    "pre-commit": [
      {
        "name": "update-docs-on-commit",
        "command": "powershell -ExecutionPolicy Bypass -File .claude/hooks/update-docs-on-commit.ps1",
        "enabled": true,
        "description": "Reminds to update CLAUDE.md, GEMINI.md, and Conductor tracks when relevant code changes"
      }
    ]
  },
  "documentation": {
    "auto_update_triggers": {
      "backend_service_change": {
        "files": ["src/backend/*.jsw"],
        "update_targets": ["CLAUDE.md:Backend Services", "GEMINI.md:Backend Services"]
      },
      "html_component_change": {
        "files": ["src/public/*.html"],
        "update_targets": ["GEMINI.md:HTML Component Inventory"]
      },
      "scheduled_job_change": {
        "files": ["src/backend/jobs.config"],
        "update_targets": ["CLAUDE.md:Scheduled Jobs", "GEMINI.md:Scheduled Jobs"]
      },
      "collection_change": {
        "files": ["src/backend/setupCollections.jsw"],
        "update_targets": ["CLAUDE.md:Wix Collections"]
      }
    },
    "conductor_track_mapping": {
      "admin": "admin_portal_*",
      "driver": "driver_cockpit_*",
      "recruiter": "retention_dashboard",
      "stripe": "stripe_subscriptions_*",
      "carrier": "carrier_conversion_*",
      "matching": "reverse_matching_*",
      "form": "form_ux_refactor_*",
      "observability": "observability_gaps_*"
    }
  }
}
