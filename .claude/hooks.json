{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "mcp__airtable__create_table",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File .claude/hooks/enforce-airtable-v2-prefix.ps1",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File .claude/hooks/validate-airtable-wix-fields.ps1",
            "timeout": 60
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File .claude/hooks/enforce-html-location.ps1",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File .claude/hooks/validate-carrier-form.ps1",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File .claude/hooks/check-wix-query-types.ps1",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File .claude/hooks/validate-html-velo-bridge.ps1",
            "timeout": 60
          }
        ]
      }
    ]
  },
  "documentation": {
    "auto_update_triggers": {
      "backend_service_change": {
        "files": ["src/backend/*.jsw"],
        "update_targets": ["CLAUDE.md:Backend Services", "GEMINI.md:Backend Services"]
      },
      "html_component_change": {
        "files": ["src/public/*.html"],
        "update_targets": ["GEMINI.md:HTML Component Inventory"]
      },
      "scheduled_job_change": {
        "files": ["src/backend/jobs.config"],
        "update_targets": ["CLAUDE.md:Scheduled Jobs", "GEMINI.md:Scheduled Jobs"]
      },
      "collection_change": {
        "files": ["src/backend/setupCollections.jsw"],
        "update_targets": ["CLAUDE.md:Wix Collections"]
      }
    },
    "conductor_track_mapping": {
      "admin": "admin_portal_*",
      "driver": "driver_cockpit_*",
      "recruiter": "retention_dashboard",
      "stripe": "stripe_subscriptions_*",
      "carrier": "carrier_conversion_*",
      "matching": "reverse_matching_*",
      "form": "form_ux_refactor_*",
      "observability": "observability_gaps_*"
    }
  }
}
