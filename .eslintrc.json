{
  "root": true,
  "extends": ["eslint:recommended"],
  "env": {
    "browser": true,
    "node": true,
    "es2022": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "globals": {
    "$w": "readonly",
    "ROS": "readonly",
    "VoiceAgent": "readonly",
    "Chart": "readonly"
  },
  "rules": {
    "no-unused-vars": [
      "warn",
      {
        "args": "none",
        "ignoreRestSiblings": true
      }
    ],
    "no-empty": "warn",
    "no-case-declarations": "warn"
  },
  "overrides": [
    {
      "files": [
        "**/*.test.js",
        "**/__tests__/**/*.js",
        "tests/**/*.js"
      ],
      "rules": {
        "no-unused-vars": "off"
      }
    },
    {
      "files": [
        "src/public/driver/js/**/*.js",
        "src/public/admin/js/ticket-*.js"
      ],
      "rules": {
        "no-undef": "off"
      }
    }
  ],
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "coverage/",
    ".claude/",
    "Conductor/tracks/**/scripts/**",
    "scripts/**",
    "sdk/**",
    "**/*_snippet*.js",
    "**/*_snippet_append.js",
    "**/*.min.js"
  ]
}
