  "animation": {
    "keyframes": {
      "fadeInUp": {
        "from": { "opacity": 0, "transform": "translateY(30px)" },
        "to": { "opacity": 1, "transform": "translateY(0)" }
      },
      "float": {
        "0%_100%": { "transform": "translateY(0px)" },
        "50%": { "transform": "translateY(-20px)" }
      }
    },
    "durations": {
      "fadeInUp": "0.8s forwards",
      "float": "6s infinite",
      "animate-pulse": "1s infinite"
    },
    "usage": {
      "fadeInUp": "Section reveals, scroll-triggered animations",
      "float": "Decorative elements, background shapes",
      "animate-pulse": "AI-related icons, loading states"
    },
    "principle": "Use motion sparingly. Every animation must earn its place."
  },

  "voice_guidelines": {
    "driver_copy": {
      "tone": "Direct, time-sensitive, numbers over adjectives",
      "examples": [
        "Matches in < 24hrs",
        "Better pay. Home time that matters.",
        "100% free for drivers.",
        "One application, multiple opportunities.",
        "AI-matched to carriers that fit your life."
      ],
      "principles": [
        "Lead with benefits: pay, home time, routes",
        "Use specific numbers whenever possible",
        "Create urgency without pressure",
        "Speak to driver pain points directly"
      ]
    },
    "carrier_copy": {
      "tone": "ROI-heavy, outcome-driven, professional",
      "examples": [
        "Stop losing $500/day on empty seats.",
        "60% less time vetting unqualified applicants.",
        "30-day free replacement guarantee.",
        "Pre-qualified drivers delivered in 24 hours.",
        "Fill seats faster. Stop hemorrhaging revenue."
      ],
      "principles": [
        "Lead with cost savings and ROI",
        "Include guarantees and risk reversal",
        "Focus on time and money saved",
        "Professional but not corporate-stiff"
      ]
    }
  },

  "page_templates": {
