      "decorative_elements": {
        "top_left": "absolute top-0 left-0 w-96 h-96 bg-blue-600/10 rounded-full blur-3xl",
        "bottom_right": "absolute bottom-0 right-0 w-96 h-96 bg-yellow-400/10 rounded-full blur-3xl"
      },
      "content_wrapper": "max-w-4xl mx-auto px-4 relative z-10",
      "heading": "text-4xl font-black",
