      "secondary_cta": "bg-blue-800 text-white font-bold px-8 py-4 rounded-lg border border-blue-500 hover:bg-blue-700 transition-all"
    },
    "content_cards": {
      "standard": {
        "container": "bg-white rounded-xl shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden group",
        "image_container": "aspect-video overflow-hidden",
        "image": "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300",
        "content_padding": "p-6",
        "category": "text-xs font-bold uppercase tracking-wider text-blue-600",
