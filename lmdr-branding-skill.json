{
  "skill": {
    "name": "lmdr-brand-system",
    "version": "1.0.0",
    "description": "Complete brand design system for Last Mile Driver Recruiting (LMDR) - an AI-powered CDL driver recruitment platform that connects qualified drivers with carriers in 24-48 hours.",
    "domain": "https://www.lastmiledr.app",
    "sitemap": "https://www.lastmiledr.app/sitemap.xml",
    "purpose": "Build conversion-optimized pages serving two outcomes: driver action and carrier conviction"
  },

  "brand_philosophy": {
    "core_principle": "Contrast and Clarity",
    "dual_audience_strategy": {
      "drivers": {
        "positioning": "LEFT",
        "tone": "Warm, action-oriented, urgent",
        "accent": "Yellow",
        "card_style": "Dark",
        "emotional_appeal": "Opportunity, freedom, better life"
      },
      "carriers": {
        "positioning": "RIGHT",
        "tone": "Cool, trust-focused, ROI-driven",
        "accent": "Blue",
        "card_style": "White/Light",
        "emotional_appeal": "Efficiency, reliability, cost savings"
      }
    },
    "position_rule": "Drivers ALWAYS appear LEFT. Carriers ALWAYS appear RIGHT.",
    "value_proposition": {
      "drivers": "AI-matched to carriers that fit your life",
      "carriers": "Pre-qualified drivers delivered in 24-48 hours"
    }
  },

  "color_system": {
    "primary_tokens": {
      "lmdr_dark": {
        "hex": "#0f172a",
        "tailwind": "slate-900",
        "use": "Dark cards, footers, emphasis sections"
      },
      "lmdr_blue": {
        "hex": "#2563eb",
        "tailwind": "blue-600",
        "use": "Carrier CTAs, trust markers, icon containers"
      },
      "lmdr_yellow": {
        "hex": "#fbbf24",
        "tailwind": "amber-400",
        "use": "Driver CTAs, highlights, stat accents"
      },
      "canvas": {
        "hex": "#f9fafb",
        "tailwind": "gray-50",
        "use": "Page backgrounds, section backgrounds"
      },
      "content": {
        "hex": "#ffffff",
        "tailwind": "white",
        "use": "Card bodies, form containers"
      },
      "body_text": {
        "hex": "#475569",
        "tailwind": "slate-600",
        "use": "Secondary text, body copy"
      }
    },
    "gradients": {
      "driver_highlight": {
        "name": "Yellow Momentum",
        "css": "background: linear-gradient(135deg, #F9FF80 0%, #FFD700 100%);",
        "use": "Driver-focused hero accents, special highlights"
      },
      "brand_text": {
        "name": "Blue Authority",
        "css": "background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;",
        "use": "Branded text headlines, emphasis"
      }
    },
    "category_colors": {
      "driver_tips": "blue-600",
      "carrier_resources": "emerald-600",
      "industry_news": "purple-600",
      "compliance": "orange-600",
      "company_news": "slate-600"
    },
    "semantic_colors": {
      "success": {
        "bg": "green-100",
        "text": "green-600",
        "use": "Confirmation states, success messages"
      },
      "warning": {
        "bg": "yellow-100",
        "text": "yellow-600"
      },
      "error": {
        "bg": "red-100",
        "text": "red-600"
      }
    }
  },

  "typography": {
    "font_family": {
      "name": "Inter",
      "weights": [300, 400, 500, 600, 700, 800, 900],
      "import": "<link href=\"https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap\" rel=\"stylesheet\">"
    },
    "scale": {
      "hero_headline": {
        "classes": "text-4xl md:text-6xl font-black",
        "use": "Landing page H1, primary headlines"
      },
      "section_title": {
        "classes": "text-3xl md:text-5xl font-black",
        "use": "Section H2, major introductions"
      },
      "card_heading": {
        "classes": "text-xl font-bold",
        "use": "H3, card titles, benefit headers"
      },
      "body_large": {
        "classes": "text-lg text-gray-600",
        "use": "Lead paragraphs, important body text"
      },
      "body": {
        "classes": "text-base text-slate-600",
        "use": "Standard content copy"
      },
      "meta_label": {
        "classes": "text-xs font-bold uppercase tracking-wider",
        "use": "Stats labels, category tags, metadata"
      }
    }
  },

  "spacing_and_layout": {
    "container": {
      "max_width": "max-w-6xl",
      "padding": "px-4",
      "center": "mx-auto"
    },
    "sections": {
      "standard_padding": "py-20",
      "compact_padding": "py-10",
      "stats_strip_padding": "py-10"
    },
    "cards": {
      "border_radius": {
        "standard": "rounded-xl",
        "hero": "rounded-3xl",
        "icon_container": "rounded-xl",
        "button": "rounded-lg"
      },
      "padding": {
        "standard": "p-6",
        "hero": "p-8",
        "featured": "p-8 lg:p-10"
      }
    },
    "grid_gaps": {
      "standard": "gap-8",
      "large": "lg:gap-12"
    }
  },

  "component_library": {
    "hero_cards": {
      "driver_card": {
        "container": "bg-slate-900 rounded-3xl p-8 text-white",
        "badge": "bg-yellow-400 text-slate-900 px-3 py-1 rounded-full text-sm font-bold",
        "badge_text": "For Drivers",
        "heading": "text-3xl font-black mt-4",
        "subtext": "text-gray-300 mt-2",
        "cta": "bg-yellow-400 text-slate-900 font-bold px-6 py-3 rounded-lg mt-6 hover:shadow-lg hover:shadow-yellow-400/30 transition-all"
      },
      "carrier_card": {
        "container": "bg-white border border-slate-200 rounded-3xl p-8",
        "badge": "bg-blue-600 text-white px-3 py-1 rounded-full text-sm font-bold",
        "badge_text": "For Carriers",
        "heading": "text-3xl font-black text-slate-900 mt-4",
        "subtext": "text-slate-600 mt-2",
        "cta": "bg-slate-900 text-white font-bold px-6 py-3 rounded-lg mt-6 hover:shadow-xl transition-all"
      }
    },
    "stats_strip": {
      "container": "py-10 bg-white border-y border-slate-100",
      "grid": "grid grid-cols-2 md:grid-cols-4 gap-8 text-center",
      "stat_number": "text-4xl font-black text-slate-900",
      "stat_label": "text-xs font-bold uppercase tracking-wider text-slate-500 mt-1",
      "example_stats": [
        { "value": "200K+", "label": "Verified Drivers" },
        { "value": "<24hrs", "label": "Match Time" },
        { "value": "98%", "label": "Retention Rate" },
        { "value": "500+", "label": "Partner Carriers" }
      ]
    },
    "how_it_works": {
      "container": "py-20 bg-gray-50",
      "title": "text-3xl md:text-5xl font-black text-center text-slate-900 mb-12",
      "grid": "grid md:grid-cols-4 gap-8",
      "step_icon_container": "w-24 h-24 bg-white border-4 border-slate-100 rounded-2xl shadow-xl mx-auto flex items-center justify-center",
      "step_icon": "text-blue-600 text-3xl",
      "step_title": "text-xl font-bold mt-4 text-slate-900",
      "step_description": "text-slate-600 text-sm mt-2",
      "default_steps": [
        { "icon": "fa-user-plus", "title": "Apply Once", "desc": "One application, multiple opportunities." },
        { "icon": "fa-robot", "title": "AI Matches", "desc": "Smart algorithms find your perfect fit.", "animation": "animate-pulse" },
        { "icon": "fa-handshake", "title": "Connect", "desc": "Direct introductions to carriers." },
        { "icon": "fa-truck-fast", "title": "Start Driving", "desc": "Hit the road with confidence." }
      ]
    },
    "split_benefits": {
      "driver_column": {
        "background": "bg-gray-50 or bg-white",
        "icon_container": "w-14 h-14 bg-blue-600 rounded-xl flex items-center justify-center flex-shrink-0",
        "icon_color": "text-white text-2xl",
        "heading": "font-bold text-slate-900 text-lg",
        "description": "text-slate-600 text-sm mt-1",
        "cta": "bg-yellow-400 text-slate-900 font-bold px-6 py-3 rounded-lg hover:shadow-lg hover:shadow-yellow-400/30 transition-all"
      },
      "carrier_column": {
        "background": "bg-slate-900 rounded-3xl p-8 lg:p-10 text-white",
