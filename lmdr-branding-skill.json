        "Hero Section (Dual Cards side-by-side)",
        "How It Works (4 Steps)",
        "Stats Strip (social proof)",
        "Split Benefits (Drivers | Carriers)",
        "Content/Insights Cards (optional)",
        "Application Section (Form in dark container)",
        "CTA Band",
        "Footer"
      ],
      "notes": [
        "Hero uses md:grid-cols-2 gap-8 lg:gap-12",
        "Driver card on LEFT (dark bg, yellow CTA)",
        "Carrier card on RIGHT (white bg, dark CTA)",
        "Maintain visual balance between both audiences"
      ]
    },
    "driver_recruitment": {
      "flow": [
        "Header + Navigation",
        "Hero (Driver Card emphasized, yellow accents dominant)",
        "Stats Strip (driver-focused: jobs filled, avg pay increase, home time)",
        "Driver Benefits Section",
        "Testimonial Cards (optional)",
        "How It Works for Drivers",
        "Application Section (yellow primary CTA)",
        "CTA Band (yellow primary button)",
        "Footer"
