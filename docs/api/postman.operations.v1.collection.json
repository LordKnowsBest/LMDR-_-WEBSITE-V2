{
  "info": {
    "name": "LMDR Operations APIs v1",
    "_postman_id": "6a68c2f9-50f6-4d0f-b987-df1faccfb4a4",
    "description": "Focused collection for parking and fuel endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://www.lastmiledr.app/_functions/api_gateway"
    },
    {
      "key": "apiKey",
      "value": "lmdr_live_replace_me"
    },
    {
      "key": "parkingId",
      "value": "loc_123"
    },
    {
      "key": "stationId",
      "value": "st_123"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{apiKey}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Parking Search",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/v1/parking/search?lat=35.1495&lng=-90.0490&radius=25&amenities=restroom,showers&min_spaces=5"
      }
    },
    {
      "name": "Parking Location",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/v1/parking/location/{{parkingId}}"
      }
    },
    {
      "name": "Fuel Prices",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/v1/fuel/prices?lat=35.1495&lng=-90.0490&radius=25&fuel_cards=comdata,efs"
      }
    },
    {
      "name": "Route Fuel Plan",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"route_points\": [\n    {\"lat\": 35.1495, \"lng\": -90.0490},\n    {\"lat\": 36.1627, \"lng\": -86.7816}\n  ],\n  \"total_distance_miles\": 220,\n  \"fuel_cards\": [\"comdata\"],\n  \"tank_capacity_gallons\": 120,\n  \"current_fuel_gallons\": 30,\n  \"mpg\": 6.5\n}"
        },
        "url": "{{baseUrl}}/v1/fuel/plan"
      }
    },
    {
      "name": "Fuel Station",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/v1/fuel/station/{{stationId}}"
      }
    }
  ]
}
