{
  "info": {
    "name": "LMDR Documents APIs v1",
    "_postman_id": "ef33df3d-5f71-497e-ad98-bc1308f70ef4",
    "description": "Focused collection for document extraction and verification APIs.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "https://www.lastmiledr.app/_functions/api_gateway" },
    { "key": "apiKey", "value": "lmdr_live_replace_me" },
    { "key": "batchJobId", "value": "batch_123" }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [{ "key": "token", "value": "{{apiKey}}", "type": "string" }]
  },
  "item": [
    {
      "name": "CDL Extract",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"mime_type\": \"image/jpeg\",\n  \"base64_data\": \"REPLACE_WITH_BASE64\"\n}" },
        "url": "{{baseUrl}}/v1/documents/cdl/extract"
      }
    },
    {
      "name": "Medical Cert Extract",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"mime_type\": \"image/png\",\n  \"base64_data\": \"REPLACE_WITH_BASE64\"\n}" },
        "url": "{{baseUrl}}/v1/documents/medcert/extract"
      }
    },
    {
      "name": "Verify Document",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"extracted_document_id\": \"ext_123\"\n}" },
        "url": "{{baseUrl}}/v1/documents/verify"
      }
    },
    {
      "name": "Submit Batch",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"documents\": [\n    {\"type\": \"cdl\", \"mime_type\": \"image/png\", \"base64_data\": \"REPLACE1\"},\n    {\"type\": \"medcert\", \"mime_type\": \"image/png\", \"base64_data\": \"REPLACE2\"}\n  ],\n  \"webhook_callback_url\": \"https://partner.example/webhooks/lmdr-docs\"\n}"
        },
        "url": "{{baseUrl}}/v1/documents/batch"
      }
    },
    {
      "name": "Batch Status",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/v1/documents/batch/{{batchJobId}}"
      }
    }
  ]
}
