{
  "info": {
    "name": "LMDR Intelligence APIs v1",
    "_postman_id": "f5d8a7f2-cf40-4f8e-9180-8ec9a5c2f8fd",
    "description": "Focused collection for LMDR intelligence endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://www.lastmiledr.app/_functions/api_gateway"
    },
    {
      "key": "apiKey",
      "value": "lmdr_live_replace_me"
    },
    {
      "key": "dotNumber",
      "value": "123456"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{apiKey}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Carrier Intelligence",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/v1/intelligence/carrier/{{dotNumber}}"
      }
    },
    {
      "name": "Sentiment",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/v1/intelligence/sentiment/{{dotNumber}}"
      }
    },
    {
      "name": "Market Snapshot",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/v1/intelligence/market?region=southeast&freight_type=dry_van&operation_type=otr"
      }
    },
    {
      "name": "Carrier Search",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"filters\": {\n    \"sentiment\": \"positive\",\n    \"fleet_size_min\": 50,\n    \"fleet_size_max\": 500,\n    \"safety_rating\": \"satisfactory\"\n  },\n  \"limit\": 25,\n  \"offset\": 0\n}"
        },
        "url": "{{baseUrl}}/v1/intelligence/carriers/search"
      }
    }
  ]
}
