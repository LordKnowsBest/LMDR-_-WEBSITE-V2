{
  "info": {
    "name": "LMDR Matching APIs v1",
    "_postman_id": "2ae301f7-8b76-4202-b2ea-7515e04f4f9d",
    "description": "Enterprise matching endpoints for driver and carrier workflows.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://www.lastmiledr.app/_functions/api_gateway"
    },
    {
      "key": "apiKey",
      "value": "lmdr_live_replace_me"
    },
    {
      "key": "driverId",
      "value": "d_123"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{apiKey}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Driver Search",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"carrier_dot\": \"123456\",\n  \"filters\": {\n    \"cdl_class\": [\"A\"],\n    \"endorsements_required\": [\"H\"],\n    \"min_experience_years\": 2,\n    \"max_distance_miles\": 100\n  },\n  \"limit\": 25\n}"
        },
        "url": "{{baseUrl}}/v1/matching/drivers/search"
      }
    },
    {
      "name": "Driver Profile",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/v1/matching/driver/{{driverId}}?carrier_dot=123456"
      }
    },
    {
      "name": "Carrier Match",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"driver_profile\": {\n    \"endorsements\": [\"H\", \"N\"],\n    \"years_experience\": 4,\n    \"preferences\": {\n      \"operation_type\": \"OTR\",\n      \"min_cpm\": 0.65\n    }\n  },\n  \"include_enrichment\": true,\n  \"limit\": 10\n}"
        },
        "url": "{{baseUrl}}/v1/matching/carriers"
      }
    },
    {
      "name": "Qualification Check",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"driver\": {\n    \"cdl_class\": \"A\",\n    \"endorsements\": [\"H\"],\n    \"years_experience\": 3\n  },\n  \"carrier_requirements\": {\n    \"cdl_class\": \"A\",\n    \"endorsements_required\": [\"H\", \"N\"],\n    \"min_experience_years\": 2\n  }\n}"
        },
        "url": "{{baseUrl}}/v1/matching/qualify"
      }
    }
  ]
}
