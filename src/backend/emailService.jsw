// ============================================================================
// SEND LEADERBOARD ANNOUNCEMENT EMAIL
// ============================================================================

/**
 * Sends a weekly leaderboard announcement email to top recruiters.
 *
 * @param {string} userId - The Wix User ID of the recruiter
 * @param {Object} data - variables to pass to the email template
 * @param {string} data.recruiterName - Name of the recruiter
 * @param {number} data.rank - Current leaderboard rank
 * @param {number} data.score - Current score
 * @param {string} data.period - 'weekly' or 'monthly'
 * @param {string} data.leaderboardType - 'overall', 'hires', 'response_time', 'retention'
 * @param {string} data.periodStart - Period start date formatted
 * @param {string} data.periodEnd - Period end date formatted
 * @param {Array} data.topThree - Top 3 recruiters for context
 */
export async function sendLeaderboardAnnouncementEmail(userId, data) {
  try {
    const emailId = 'leaderboard_announcement'; // Must match ID in Wix Dashboard

    // Format rank with suffix (1st, 2nd, 3rd, etc.)
    const rankSuffix = getRankSuffix(data.rank);
    const rankDisplay = `${data.rank}${rankSuffix}`;

    // Format period name
    const periodName = data.period === 'weekly' ? 'This Week' : 'This Month';

    // Build top 3 display
    let topThreeDisplay = '';
    if (data.topThree && data.topThree.length > 0) {
      topThreeDisplay = data.topThree
        .slice(0, 3)
        .map((r, i) => `${i + 1}. ${r.recruiterName || 'Recruiter'} - ${r.displayValue || r.score}`)
        .join('\n');
    }

    const variables = {
      recruiterName: data.recruiterName || 'Recruiter',
      rank: rankDisplay,
      score: data.score || 0,
      periodName: periodName,
      leaderboardType: formatLeaderboardType(data.leaderboardType),
      periodStart: data.periodStart || '',
      periodEnd: data.periodEnd || '',
      topThreeDisplay: topThreeDisplay,
      leaderboardUrl: 'https://www.lastmiledr.app/recruiter/leaderboard'
    };

    console.log(`üìß Sending leaderboard announcement to user ${userId} (Rank #${data.rank})`);

    await wixUsersBackend.emailUser(emailId, userId, {
      variables: variables
    });

    return { success: true };
  } catch (error) {
    console.error('‚ùå Error sending leaderboard announcement:', error);
    return { success: false, error: error.message };
  }
}

/**
 * Send batch leaderboard announcement emails to top 10 recruiters
 * @param {Array} topRecruiters - Array of top 10 recruiter rankings
 * @param {string} period - 'weekly' or 'monthly'
 * @param {string} leaderboardType - Type of leaderboard
 * @param {string} periodStart - Period start date
 * @param {string} periodEnd - Period end date
 * @returns {Object} { sent, failed, results }
 */
export async function sendBatchLeaderboardAnnouncements(topRecruiters, period, leaderboardType, periodStart, periodEnd) {
  const results = {
    sent: 0,
    failed: 0,
    details: []
  };

  const topThree = topRecruiters.slice(0, 3);

  for (const recruiter of topRecruiters) {
    // Skip if no user ID (can't send email without Wix user ID)
    if (!recruiter.recruiterId) {
      results.details.push({
        rank: recruiter.rank,
        status: 'skipped',
        reason: 'no_user_id'
      });
      continue;
    }

    const emailResult = await sendLeaderboardAnnouncementEmail(recruiter.recruiterId, {
      recruiterName: recruiter.recruiterName,
      rank: recruiter.rank,
      score: recruiter.score,
      period,
      leaderboardType,
      periodStart,
      periodEnd,
      topThree
    });

    if (emailResult.success) {
      results.sent++;
      results.details.push({
        rank: recruiter.rank,
        recruiterId: recruiter.recruiterId,
        status: 'sent'
      });
    } else {
      results.failed++;
      results.details.push({
        rank: recruiter.rank,
        recruiterId: recruiter.recruiterId,
        status: 'failed',
        error: emailResult.error
      });
    }
  }

  console.log(`üìß Leaderboard announcement emails: ${results.sent} sent, ${results.failed} failed`);

  return results;
}

// Helper: Get rank suffix (1st, 2nd, 3rd, 4th, etc.)
function getRankSuffix(rank) {
  if (rank === 1) return 'st';
  if (rank === 2) return 'nd';
  if (rank === 3) return 'rd';
  return 'th';
}

// Helper: Format leaderboard type for display
function formatLeaderboardType(type) {
  const typeNames = {
    'overall': 'Top Recruiters',
    'hires': 'Top Hirers',
    'response_time': 'Fastest Responders',
    'retention': 'Retention Leaders'
  };
  return typeNames[type] || 'Leaderboard';
}

