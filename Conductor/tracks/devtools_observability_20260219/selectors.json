{
  "_version": "1.0",
  "_description": "Externalized selectors for Evidence Pack verification. Update these when Wix component updates change CSS selectors without modifying the playbook.",
  "paths": {
    "home": {
      "route": "/",
      "readyText": "Last Mile",
      "selectorCSS": ".hero-cta-button, [data-hook=\"cta-button\"], .hero-section",
      "iframeMatch": null,
      "timeoutMs": 15000,
      "dwellMs": 2000,
      "screenshotFile": "home.png",
      "nonDestructive": false
    },
    "ai_matcher": {
      "route": "/ai-matching",
      "readyText": "AI Matching",
      "selectorCSS": "#ai-matching-container, .match-card, .matching-interface",
      "iframeMatch": "AI_MATCHING",
      "timeoutMs": 20000,
      "dwellMs": 4000,
      "screenshotFile": "ai_matcher.png",
      "nonDestructive": false
    },
    "driver_entry": {
      "route": "/driver-dashboard",
      "readyText": "My Applications",
      "selectorCSS": "#dashboard-container, .driver-dashboard, .application-card",
      "iframeMatch": "DRIVER_DASHBOARD",
      "timeoutMs": 15000,
      "dwellMs": 4000,
      "screenshotFile": "driver_entry.png",
      "nonDestructive": false
    },
    "carrier_entry": {
      "route": "/carrier-welcome",
      "readyText": "Welcome",
      "selectorCSS": "#onboarding-container, .carrier-welcome, .status-steps",
      "iframeMatch": "Carrier_Welcome",
      "timeoutMs": 15000,
      "dwellMs": 2000,
      "screenshotFile": "carrier_entry.png",
      "nonDestructive": false
    },
    "app_flow": {
      "route": "/quick-apply",
      "readyText": "Upload Your CDL",
      "selectorCSS": "#cdl-upload-btn, .upload-section",
      "iframeMatch": "Quick Apply",
      "timeoutMs": 15000,
      "dwellMs": 2000,
      "screenshotFile": "app_flow.png",
      "nonDestructive": true
    }
  }
}
